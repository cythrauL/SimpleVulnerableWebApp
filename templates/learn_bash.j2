{% extends 'bootstrap/base.html' %}
{% import 'bootstrap/wtf.html' as wtf %}

{% block content %}
<div class="container">
	<div class="row justify-content-center">
		<div class="col-sm-10">
			<h1>
			Bash Tutorial
			</h1>
			<br>
			<br>
			<ul>
			<li><b>ls</b> - list files</li>
			<li><b>pwd</b> - tell you where you are</li>
			<li><b>cat</b> filename - print the contents of a file to the screen</li>
			<li><b>rm</b> filename - delete a file</li>
			<li><b>whoami</b> - tells us who is logged on</li>
			<li><b>mkdir</b> filename - Make a folder</li>
			<li>Example: <b>mkdir `whoami`</b>- Make a folder called 'root'</li>
			</ul>
			<br>
			<br>
			<div>
			
				<div>
					{{ wtf.quick_form(bashForm, method="POST", action="./run_bash_command") }}
				</div>
				{% if bash_output %}
				<br><br>
				<div style="white-space: pre-wrap;">
{{ bash_output }}
				</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}
